@page "/categories/create"

<PageTitle>Добавления нового категория</PageTitle>

<h3>Добавления нового категория</h3>

<form>
    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" class="form-control" id="name" @bind="@_category.Name" required/>
    </div>
    <button type="button" class="btn btn-primary" @onclick="SaveNewCategory">Добавить</button>
</form>