@page "/categories"

<PageTitle>Категории</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Категории</h1>
    </div>
    <div>
        <button class="btn btn-primary" @onclick="HandleClickAddItemButton" >Добавить категорию</button>
    </div>
</div>

@if (_categories == null)
{
    <p>
        <em>Загрузка...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th class="col-1">№</th>
            <th>Название</th>
            <th class="text-end">Дата создания</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody>
        @for (var i = 0; i < _categories.Count; i++)
        {
            var category = _categories[i];
            <tr>
                <td>@(i + 1)</td>
                <td>@category.Name</td>
                <td class="text-end">@category.CreatedAt.ToString("dd.MM.yyyy")</td>
                <td class="text-end">
                    <button @onclick="() => HandleClickEditItemButton(category.Id)" class="btn btn-warning">Редактировать</button>
                    <button @onclick="() => HandleClickRemoveItemButton(category.Id)" class="btn btn-danger">Удалить</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}